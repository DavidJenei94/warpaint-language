        <shape type="rectangle" x="5%" y="50%" width="90%" height="25%" color="0xFF0000"/>
    </drawable-list>
    <drawable-list id="ClickAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="0%" y="0%" width="100%" height="25%" color="0x0055AA"/> <!-- Flags background -->
        <shape type="rectangle" x="0%" y="49%" width="100%" height="2%" color="0x0055AA"/> <!-- Translation divider background -->
