<drawables>
    <bitmap id="LauncherIcon" filename="launcher_icon.png" />
    <drawable-list id="TextAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="5%" y="25%" width="90%" height="25%" color="0xFF0000"/>
        <shape type="rectangle" x="5%" y="50%" width="90%" height="25%" color="0xFF0000"/>
    </drawable-list>
    <drawable-list id="ClickAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="0%" y="0%" width="100%" height="25%" color="0x0000FF"/> <!-- Flags background -->
        <shape type="rectangle" x="0%" y="49%" width="100%" height="2%" color="0x0000FF"/> <!-- Translation divider background -->
        <shape type="rectangle" x="0%" y="75%" width="100%" height="25%" color="0x0000FF"/> <!-- Next label background -->
        <shape type="rectangle"  x="0%" y="50%" width="100%" height="25%" color="0xFFFF00"/>  <!-- Reveal label background -->
    </drawable-list>
    <drawable-list id="StatsAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="0%" y="0%" width="100%" height="10%" color="0x0000FF"/> <!-- Statistics label background -->
        <shape type="rectangle" x="0%" y="90%" width="100%" height="10%" color="0x0000FF"/> <!-- Statistics next label background -->
        <shape type="polygon" points="[[47%, 93%], [53%, 93%], [50%, 97%]]" color="0xFFFFFF"/> <!-- Statistics next icon -->
    </drawable-list>
    <drawable-list id="StatsListAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="0%" y="0%" width="100%" height="20%" color="0x0000FF"/> <!-- Statistics previous label background -->
        <shape type="polygon" points="[[47%, 7%], [53%, 7%], [50%, 3%]]" color="0xFFFFFF"/> <!-- Statistics previous icon -->
        <shape type="rectangle" x="0%" y="10%" width="100%" height="1%" color="0x000000"/> <!-- Statistics divider line color -->
    </drawable-list>
</drawables>