<drawables>
    <bitmap id="LauncherIcon" filename="WpV_logo.png" dithering="none" />
    <drawable-list id="ClickAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="0%" y="0%" width="100%" height="25%" color="0x0055AA"/> <!-- Flags background -->
        <shape type="polygon" points="[[34%, 20%], [38%, 20%], [36%, 23%]]" color="0xFFFFFF"/> <!-- Translation icon between flags -->
        <shape type="rectangle" x="0%" y="69%" width="100%" height="1%" color="0xFFFFFF"/> <!-- Translation divider background -->
        <shape type="rectangle" x="0%" y="95%" width="100%" height="25%" color="0x0055AA"/> <!-- Next label background -->
        <shape type="rectangle"  x="0%" y="70%" width="100%" height="30%" color="0xFFFFFF"/>  <!-- Reveal label background -->
    </drawable-list>
    <drawable-list id="StatsAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="rectangle" x="0%" y="0%" width="100%" height="10%" color="0x0055AA"/> <!-- Statistics label background -->
        <shape type="rectangle" x="0%" y="90%" width="100%" height="10%" color="0x0055AA"/> <!-- Statistics bottom label background -->
    </drawable-list>
    <drawable-list scope="glance" id="GlanceAreas" background="Graphics.COLOR_TRANSPARENT">
        <shape type="polygon" points="[[48%, 47%], [48%, 55%], [52%, 51%]]" color="0xFFFFFF"/> <!-- Translation icon between flags -->
    </drawable-list>
</drawables>